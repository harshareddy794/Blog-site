<%- include("partials/header") -%>
    <div  class="ui container">
        <h1>Welcome to Blog page</h1>
        <% blogs.forEach(function(blog){ %>
        <h3><%= blog.name %></h3>
        <img src="<%= blog.image %>">
        <p><%= blog.desc.substring(0,100)%>....</p>
        <a href="/blogs/<%= blog._id %>" class="ui blue button"> Read more</a>
        <p><strong>Created :</strong><%= blog.created.toDateString() %></p>
        <hr style="width: 100%;">
        <% }) %>    
    </div>

<%- include("partials/footer") -%>